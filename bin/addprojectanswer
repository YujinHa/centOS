#!/usr/bin/env python
#coding:utf8
import os
import sys

root = "/project"

def addProject(name):
	"""
	프로젝트 하위 경로를 생성하는 함수입니다.
	"""
	subDirs = ["shot",
			"in",
			"out",
			"edit",
			"asset",
			"asset/char",
			"asset/shader",
			"config",
			"config/ocio",
			"config/thumbnail",
			"doc",
			"doc/concept"]
	for d in subDirs:
		p = "/".join([root,name,d])
		os.makedirs(p)

def checkProject(name):
	if os.path.exists(root) == True:
		isProject(name)
	else:
		print "project 폴더가 존재하지 않습니다!"

def isProject(name):
	n = "/".join([root,name])
	if os.path.exists(n) == False:
		addProject(name)
	else:
		print "%s 프로젝트가 이미 있습니다!" % (name)

def help():
		print "How to use:"
		print "$ addprojectanswer projectname"
		sys.exit()

if __name__ == "__main__":
	if len(sys.argv) != 2:
		help()
	name = sys.argv[1]
	checkProject(name)
