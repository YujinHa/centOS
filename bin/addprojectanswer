#!/usr/bin/env python
#coding:utf8
import os
import sys

def addProject(name):
	"""
	프로젝트 하위 경로를 생성하는 함수입니다.
	"""
	root = "/project"
	subDirs = ["shot",
			"in",
			"out",
			"edit",
			"asset",
			"asset/char",
			"asset/shader",
			"config",
			"config/ocio",
			"config/thumbnail",
			"doc",
			"doc/concept"]
	for d in subDirs:
		p = "/".join([root,name,d])
		os.makedirs(p)

def checkProject(name):
	root = "/project"
	if os.path.exists(root) == True:
		n = "/".join([root,name])
		if os.path.exists(n) == False:
			addProject(name)
		else:
			print "%s 폴더가 이미 있습니다!" % (name)
	else:
		print "project 폴더가 존재하지 않습니다!"

if __name__ == "__main__":
	if len(sys.argv) != 2:
		print "How to use:"
		print "$ addproject projectname"
		sys.exit()
	name = sys.argv[1]
	checkProject(name)
